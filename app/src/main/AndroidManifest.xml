<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelechizy.kelechizyapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.Splash"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name=".activity.Portfolio"
            android:label="@string/title_activity_portfolio"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".activity.Experience"
            android:label="@string/title_activity_experience"
            android:parentActivityName=".MainActivity"
            android:theme="@style/NoActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelechizy.kelechizyapp.MainActivity" />
        </activity>
        <activity
            android:name=".activity.Service"
            android:label="@string/title_activity_service"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelechizy.kelechizyapp.MainActivity" />
        </activity>
        <activity
            android:name=".activity.Education"
            android:label="@string/title_activity_education"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kelechizy.kelechizyapp.MainActivity" />
        </activity>
    </application>

</manifest>
